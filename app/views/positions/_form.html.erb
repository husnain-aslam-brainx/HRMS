<%= form_with(model: position) do |form| %>
<div class=" mx-32">
 <div class="border border-gray-600 rounded-2xl p-12 ">
      <h2 class="text-base font-semibold leading-7 text-gray-900">Positions Information</h2>
      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="sm:col-span-2">
          <label for="first-name" class="input-label">Description</label>
          <div class="mt-2">
           <%= form.text_field :description, class: "form-input" %>
          </div>
        </div>
        <div class="sm:col-span-1">   
        </div>
        <div class="sm:col-span-2">
          <label for="last-name" class="input-label">Title</label>
          <div class="mt-2">
            <%= form.select :title,["SE","SQA"], class: "form-input" %>
          </div>
        </div>
        <div class="sm:col-span-2">
          <label for="email" class="input-label">Status</label>
          <div class="mt-2">
            <%= form.select :status,["open","close"], class: "form-input" %>
          </div>
        </div>
        <div>
        <div class=" flex gap-3">
        <%= link_to "Back", :back , class: "btn-back" %>
    <%= form.submit "Submit", class:" btn-submit " %>
    </div>
  </div>
</div>
<%end%>
