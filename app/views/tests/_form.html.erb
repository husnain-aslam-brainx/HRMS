<%= form_with(model: test) do |form| %>
<div class=" mx-32">
 <div class="border border-gray-600 rounded-2xl p-12 ">
      <h2 class="text-base font-semibold leading-7 text-gray-900">Test Information</h2>

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="sm:col-span-2">
          <label for="first-name" class="input-label">Description</label>
          <div class="mt-2">
           <%= form.text_field :description, class: "form-input" %>
          </div>
        </div>
        <div class="col-span-full">
          <label for="cover-photo" class="input-label">Test</label>
          <div class="mt-2 flex justify-center rounded-lg border border-dashed border-gray-900/25 px-6 py-10">
            <div class="text-center">
              <div class="mt-4 ml-4 flex text-sm leading-6 text-gray-600">
                <%= form.file_field :assessment  %>
                
              </div>
            </div>
          </div>
        </div>
        <div>
        <div class=" flex gap-3">
        <%= link_to "Back", :back , class: "btn-back" %>
    <%= form.submit "Submit", class:" btn-submit" %>
    </div>
  </div>
</div>
<%end%>
