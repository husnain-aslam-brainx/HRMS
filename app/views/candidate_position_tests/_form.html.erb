<%= form_with(model: candidate_position_test) do |form| %>
  <div class="mx-32">
    <div class="border border-gray-600 rounded-2xl p-12">
      <h2 class="text-base font-semibold leading-7 text-gray-900">Candidates Records</h2>

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="sm:col-span-2">
          <label for="candidate" class="input-label">Candidate</label>
          <div class="mt-2">
            <%= form.select :candidate_id, candidates_options , class: "form-input" %>
          </div>
        </div>

        <div class="sm:col-span-2">
          <label for="position" class="input-label">Position</label>
          <div class="mt-2">
            <%= form.select :position_id, positions_options, class: "form-input" %>
          </div>
        </div>

        <div class="sm:col-span-2">
          <label for="test" class="input-label">Test</label>
          <div class="mt-2">
            <%= form.select :test_id, tests_options, class: "form-input" %>
          </div>
        </div>

        <div class="sm:col-span-2">
          <label for="status" class="input-label">Status</label>
          <div class="mt-2">
            <%= form.select :status, ["assigned", "attempted"], class: "form-input" %>
          </div>
        </div>

        <div class="sm:col-span-2">
          <label for="result" class="input-label">Result</label>
          <div class="mt-2">
            <%= form.select :result, ["pass", "fail"], class: "form-input" %>
          </div>
        </div>

        <div>
          <div class="flex gap-3">
            <%= link_to "Back", :back, class: "btn-back" %>
            <%= form.submit "Submit", class: "btn-submit" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
