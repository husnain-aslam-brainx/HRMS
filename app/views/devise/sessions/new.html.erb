<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div
      class="absolute inset-0 bg-gradient-to-r from-gray-400 to-blue-500 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl">
    </div>
    <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">

      <div class="max-w-md mx-auto">
        <div>
          <h1 class="text-2xl font-semibold">Login</h1>
        </div>
        <div class="divide-y divide-gray-200">
          <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
            <div class="relative">
            <div> Email</div>
             <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600" %>

            </div>
             <div class="relative">
             <div>Password</div>
             <%= f.password_field :password,autocomplete: "current-password" , class: "peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600" %>
            </div>
           
            <div class="relative">
             <%= f.submit "Login", class:"bg-blue-500 text-white rounded-md px-2 py-1" %>
             
            </div>
          </div>
        </div>
      </div>
      <% end %>

      <div class="w-full flex justify-center px-16">
        <button class="flex items-center bg-white border border-gray-300 rounded-lg shadow-md px-10 py-2 text-sm font-medium text-gray-800 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
          <%= link_to "SignUp",new_user_registration_path %>
        </button>
      </div>

    </div>
  </div>
</div>
