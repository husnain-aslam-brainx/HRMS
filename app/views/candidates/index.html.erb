<div class="flex justify-end">
  <%= link_to "Create", new_candidate_path, class: "btn-create" %>
</div>

<section class="container px-4 mx-auto">
  <div class="flex flex-col">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden border border-gray-200 dark:border-gray-700 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-800">
              <tr>
                <th scope="col" class="tbl-heading">Candidates</th>
                <th scope="col" class="tbl-heading">Address</th>
                <th scope="col" class="tbl-heading">Phone</th>
                <th scope="col" class="tbl-heading">Resume</th>
                <th scope="col" class="tbl-heading">Edit</th>
                <th scope="col" class="tbl-heading">Delete</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200 dark:divide-gray-700 dark:bg-gray-900">
              <% @candidates.each do |candidate| %>
                <tr>
                  <td class="tbl-data">
                    <div class="flex items-center gap-x-2">
                      <%= image_tag candidate.profile, class: "rounded-full h-12 w-12" %>
                      <div>
                        <h2 class="text-sm font-medium text-gray-800 dark:text-white">
                          <%= candidate.name %>
                        </h2>
                        <p class="text-xs font-normal text-gray-600 dark:text-gray-400">
                          <%= candidate.email %>
                        </p>
                      </div>
                    </div>
                  </td>
                  <td class="tbl-data"><%= candidate.address %></td>
                  <td class="tbl-data"><%= candidate.phone %></td>
                  <td class="tbl-data">
                    <% candidate.resumes.each do |resume| %>
                      <button class="text-blue-500 tbl-link">
                        <%= link_to rails_blob_path(resume, disposition: "inline"), target: "_blank" do %>
                          <%= "Resume" %>
                        <% end %>
                      </button>
                      <br>
                    <% end %>
                  </td>
                  <td class="tbl-data">
                    <button class="text-blue-500 tbl-link">
                      <%= link_to "Edit", edit_candidate_path(candidate) %>
                    </button>
                  </td>
                  <td class="tbl-data">
                    <%= button_to "Delete", candidate, method: :delete, class: "text-red-400 tbl-link" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
